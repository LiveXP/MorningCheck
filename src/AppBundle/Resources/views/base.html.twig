<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}{% endblock %} | Kaazar</title>

    {% stylesheets 'assets/bower/bootstrap/dist/css/bootstrap.css' 'assets/bower/font-awesome/css/font-awesome.css'
        'assets/bower/simplemde/dist/simplemde.min.css' 'assets/bower/select2/dist/css/select2.css'
        'assets/bower/select2-bootstrap-theme/dist/select2-bootstrap.css'
        'assets/bower/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css' 'assets/css/style.css'
        'assets/css/jquery.paste_image_reader.css' 'assets/css/helper.css'
        'assets/bower/magnific-popup/dist/magnific-popup.css'
        output='compiled/css/main.css' filter='cssrewrite' %}
            <link href="{{ asset_url }}" rel="stylesheet">
    {% endstylesheets %}

    {% block stylesheets %}{% endblock %}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    {% block head %}{% endblock %}
</head>

<body>

<div class="container">
    {% set currentPath = app.request.attributes.get('_route') %}

    <div class="header clearfix">
        <nav>
            <ul class="nav nav-pills pull-right">
                <li role="presentation" class="{{ currentPath == "homepage" ? "active" : '' }}">
                    <a href="{{ path('homepage') }}">Accueil</a>
                </li>
                <li role="presentation" class="{{ currentPath == "morning_check" ? "active" : '' }}">
                    <a href="{{ path('start_morning_check') }}">Commencer/Reprendre</a>
                </li>
                <li role="presentation" class="{{ currentPath == "history_index" ? "active" : '' }}">
                    <a href="{{ path('history_index') }}">Historique</a>
                </li>
                <li role="presentation" class="{{ currentPath == "history_stats" ? "active" : '' }}">
                    <a href="{{ path('history_stats') }}">Statistiques</a>
                </li>
                <li role="presentation" class="{{ currentPath == "admin_index" ? "active" : '' }}">
                    <a href="{{ path('sonata_admin_dashboard') }}">Edition</a>
                </li>
            </ul>
        </nav>
        <h3 class="text-muted">Kaazar</h3>
    </div>

    {% block body %}{% endblock %}

    {% block footer %}
        <footer class="footer">
            <p class="footer-content">&copy; Mentions légales LiveXP 2017 - Tous droits réservés | Version 1.0.0</p>
        </footer>
    {% endblock %}
</div> <!-- /container -->

<!-- FOSJSRouter -->
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>

{% javascripts 'assets/bower/jquery/dist/jquery.js' 'assets/bower/bootstrap/dist/js/bootstrap.js'
    'assets/bower/magnific-popup/dist/jquery.magnific-popup.js'
    'assets/bower/simplemde/dist/simplemde.min.js' 'assets/js/simplemde.js' 'assets/js/script.js'
    'assets/js/jquery.paste_image_reader.js' 'assets/bower/bootbox.js/bootbox.js'
    'assets/bower/bootstrap-datepicker/dist/js/bootstrap-datepicker.js' 'assets/bower/bootstrap-datepicker/dist/locales/bootstrap-datepicker.fr.min.js'
    'assets/bower/select2/dist/js/select2.js' 'assets/bower/select2/dist/js/i18n/fr.js'
    output='compiled/js/main.js'%}
        <script src="{{ asset_url }}"></script>
{% endjavascripts %}

{% block javascript %}{% endblock %}


</body>
</html>
